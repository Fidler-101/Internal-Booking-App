@model IEnumerable<Internal_Booking_App.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2 class="mb-4">All Bookings</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Booking</a>

<table class="table table-bordered table-striped shadow">
    <thead class="table-dark">
        <tr>
            <th>Resource</th>
            <th>Booked By</th>
            <th>Purpose</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Resource?.Name</td>
                <td>@booking.BookedBy</td>
                <td>@booking.Purpose</td>
                <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@booking.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
